    <!--2.通过别名查询-->
    <select id="findById"  resultType="Employee" >
         SELECT t_employee.id,empname,deptid,t_dept.id AS 'dept.id',deptname AS 'dept.deptname'
         FROM t_employee
         INNER JOIN t_dept ON t_employee.deptid=t_dept.id
         WHERE t_employee.id =1
    </select>
